<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_update_ava"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.features.account.individual.UpdateAvaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_update_ava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme.Collapsed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_take_ava_update_ava"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:foreground="@drawable/selectable_square"
        app:cardBackgroundColor="@color/lightest_neutral"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_update_ava">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_cv_take_ava_update_ava"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_take_ava_update_ava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/img"
                android:src="@drawable/ic_take_picture"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_take_ava_update_ava"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="none"
                android:maxLines="2"
                android:scrollHorizontally="false"
                android:text="@string/take_ava_photo"
                android:textColor="@color/darkO05"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_take_ava_update_ava"
                app:layout_constraintEnd_toStartOf="@+id/img_cancel_take_ktp_fr_document"
                app:layout_constraintStart_toEndOf="@+id/img_take_ava_update_ava"
                app:layout_constraintTop_toTopOf="@+id/img_take_ava_update_ava" />

            <ImageView
                android:id="@+id/img_cancel_take_ava_update_ava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/img"
                android:foreground="@drawable/selectable_curve"
                android:src="@drawable/ic_cancel_24px"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img_ava_update_ava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        app:cardBackgroundColor="@color/dark"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_take_ava_update_ava">

        <Button
            android:id="@+id/btn_rotate_ava_update_ava"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:layout_gravity="top|end"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_baseline_rotate_right_dark_24"
            app:iconGravity="textStart"
            app:iconTint="@android:color/white" />

        <ImageView
            android:id="@+id/img_ava_show_update_ava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/img"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_baseline_no_photography_24" />

    </androidx.cardview.widget.CardView>


    <CheckBox
        android:id="@+id/cb_update_no_hp_update_ava"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:button="@drawable/checkbox_selector"
        android:fontFamily="@font/ibm_plex_sans"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingBottom="2dp"
        android:text="@string/change_phone_number"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_img_ava_update_ava"
        app:useMaterialThemeColors="false" />

    <LinearLayout
        android:id="@+id/lin_update_no_hp_update_ava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_update_no_hp_update_ava">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_phone_number_update_ava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/lightest_neutral"
                android:hint="@string/new_no_hp"
                android:inputType="text|number"
                android:maxLength="15"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save_update_ava"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_state_selector"
        android:enabled="true"
        android:letterSpacing="0.01"
        android:text="@string/save_change"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>