            <CheckBox
                android:id="@+id/cb_not_have_npwp_ess_document_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:button="@drawable/checkbox_selector"
                android:fontFamily="@font/ibm_plex_sans"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingBottom="2dp"
                android:text="@string/not_have_npwp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_img_ktp_ess_document_show"
                app:useMaterialThemeColors="false" />

            <LinearLayout
                android:id="@+id/lin_npwp_ess_document_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cb_not_have_npwp_ess_document_show">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_npwp_number_ess_document_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/lightest_neutral"
                        android:hint="@string/npwp_number"
                        android:inputType="text|number"
                        android:maxLength="15"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_npwp_date_ess_document_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editText_npwp_date_ess_document_show"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/npwp_date"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_img_npwp_ess_document_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/dark"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_no_npwp_ess_document_show">

                    <Button
                        android:id="@+id/btn_npwp_ess_document_show"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|end"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_baseline_rotate_right_dark_24"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white" />

                    <ImageView
                        android:id="@+id/img_npwp_ess_document_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginBottom="24dp"
                        android:contentDescription="@string/img"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_baseline_no_photography_24" />

                    <ImageView
                        android:id="@+id/img_npwp_indi_ess_document_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:contentDescription="@string/img"
                        app:srcCompat="@drawable/ic_baseline_camera_alt_24" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <TextView
                android:id="@+id/lbl_selfie_ess_document_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:text="@string/selfie_photo"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lin_npwp_ess_document_show" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_img_selfie_ess_document_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                app:cardBackgroundColor="@color/dark"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_selfie_ess_document_show">

                <Button
                    android:id="@+id/btn_selfie_ess_document_show"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_baseline_rotate_right_dark_24"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white" />

                <ImageView
                    android:id="@+id/img_selfie_ess_document_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="@string/img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_baseline_no_photography_24" />

                <ImageView
                    android:id="@+id/img_selfie_indi_ess_document_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/img"
                    app:srcCompat="@drawable/ic_baseline_camera_alt_24" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/lbl_ttd_ess_document_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:text="@string/spesimen_ttd"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_img_selfie_ess_document_show" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_img_ttd_ess_document_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                app:cardBackgroundColor="@color/dark"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_ttd_ess_document_show">

                <Button
                    android:id="@+id/btn_ttd_ess_document_show"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_baseline_rotate_right_dark_24"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white" />

                <ImageView
                    android:id="@+id/img_ttd_ess_document_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="@string/img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_baseline_no_photography_24" />

                <ImageView
                    android:id="@+id/img_ttd_indi_ess_document_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/img"
                    app:srcCompat="@drawable/ic_baseline_camera_alt_24" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_save_ess_document_show"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="176dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_state_selector"
                android:letterSpacing="0.01"
                android:text="@string/save_change"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_img_ttd_ess_document_show" />

            <Button
                android:id="@+id/btn_ubah_ess_document_show"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_white"
                android:letterSpacing="0.01"
                android:text="@string/ubah"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_save_ess_document_show"
                app:layout_constraintTop_toTopOf="@+id/btn_save_ess_document_show"
                app:layout_constraintBottom_toBottomOf="@+id/btn_save_ess_document_show"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>