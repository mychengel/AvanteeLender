<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_port_aktif"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.tabportofoliofragment.AktifPortofolioFragment">

    <HorizontalScrollView
        android:id="@+id/sv_sum_port_aktif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        android:orientation="horizontal"
        android:scrollbarSize="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_pb_received_port_aktif"
                android:layout_width="304dp"
                android:layout_height="84dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_pb_received_port_aktif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:background="@color/white_transparent_80">

                    <TextView
                        android:id="@+id/lbl_tot_angs_selanjutnya_port_aktif"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/ibm_plex_sans_medium"
                        android:maxLines="1"
                        android:text="@string/tot_angs_selanjutnya"
                        android:textAllCaps="true"
                        android:textColor="@color/darkO05"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_tot_angs_selanjutnya_port_aktif"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/ibm_plex_sans_semi_bold"
                        android:text="@string/dummy_rp_nol"
                        android:textColor="@color/dark"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_tot_angs_selanjutnya_port_aktif" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nom_received_port_aktif"
                android:layout_width="304dp"
                android:layout_height="84dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_nom_received_port_aktif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:background="@color/white_transparent_80">

                    <TextView
                        android:id="@+id/lbl_tot_angs_sudah_port_aktif"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/ibm_plex_sans_medium"
                        android:maxLines="1"
                        android:text="@string/tot_angs_sudah"
                        android:textAllCaps="true"
                        android:textColor="@color/darkO05"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_tot_angs_sudah_port_aktif"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/ibm_plex_sans_semi_bold"
                        android:text="@string/dummy_rp_nol"
                        android:textColor="@color/dark"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_tot_angs_sudah_port_aktif" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/lbl_total_port_aktif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/txt_total"
        android:textColor="@color/darkO05"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv_sum_port_aktif" />

    <TextView
        android:id="@+id/txt_tot_pinjaman_port_aktif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:text="@string/nol_pinjaman"
        android:textColor="@color/dark"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/lbl_total_port_aktif"
        app:layout_constraintTop_toBottomOf="@+id/sv_sum_port_aktif" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_port_aktif"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tot_pinjaman_port_aktif" />

    <TextView
        android:id="@+id/txt_late_port_aktif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:text="@string/nol_pinjaman"
        android:textColor="@color/pending"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_tot_pinjaman_port_aktif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_tot_pinjaman_port_aktif" />

    <TextView
        android:id="@+id/lbl_late_port_aktif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="@string/late"
        android:textColor="@color/darkO05"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_late_port_aktif"
        app:layout_constraintEnd_toStartOf="@+id/txt_late_port_aktif"
        app:layout_constraintTop_toTopOf="@+id/txt_late_port_aktif" />
</androidx.constraintlayout.widget.ConstraintLayout>