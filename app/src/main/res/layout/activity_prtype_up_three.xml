<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_prtypeupthree"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.auth.prvrejection.PRTypeUpThreeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_prtypeupthree"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/sv_prtypeupthree"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_prtypeupthree">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_sv_prtypeupthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/txt_info_prtypeupthree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/txtnull"
                android:textAlignment="center"
                android:textColor="@color/failed"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_upload_filesupport_prtypeupthree"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:foreground="@drawable/selectable_square"
                app:cardBackgroundColor="@color/lightest_neutral"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_info_prtypeupthree">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_upload_filesupport_prtypeupthree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_upload_filesupport_prtypeupthree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/img"
                        android:src="@drawable/ic_take_picture"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_upload_filesupport_prtypeupthree"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:ellipsize="none"
                        android:maxLines="2"
                        android:scrollHorizontally="false"
                        android:text="@string/txtnull"
                        android:textColor="@color/darkO05"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_upload_filesupport_prtypeupthree"
                        app:layout_constraintEnd_toStartOf="@+id/img_cancel_upload_filesupport_prtypeupthree"
                        app:layout_constraintStart_toEndOf="@+id/img_upload_filesupport_prtypeupthree"
                        app:layout_constraintTop_toTopOf="@+id/img_upload_filesupport_prtypeupthree" />

                    <ImageView
                        android:id="@+id/img_cancel_upload_filesupport_prtypeupthree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/img"
                        android:foreground="@drawable/selectable_curve"
                        android:src="@drawable/ic_cancel_24px"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_img_filesupport_prtypeupthree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                app:cardBackgroundColor="@color/dark"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_upload_filesupport_prtypeupthree">

                <Button
                    android:id="@+id/btn_rotate_filesupport_prtypeupthree"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_baseline_rotate_right_dark_24"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white" />

                <ImageView
                    android:id="@+id/img_rotate_filesupport_prtypeupthree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="@string/img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_baseline_no_photography_24" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txt_format_img_prtypeupthree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/format_diperbolehkan"
                android:textColor="@color/darkO05"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/cv_img_filesupport_prtypeupthree"
                app:layout_constraintStart_toStartOf="@+id/cv_img_filesupport_prtypeupthree"
                app:layout_constraintTop_toBottomOf="@+id/cv_img_filesupport_prtypeupthree" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_upload_filesupport2_prtypeupthree"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:foreground="@drawable/selectable_square"
                app:cardBackgroundColor="@color/lightest_neutral"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_format_img_prtypeupthree">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_upload_filesupport2_prtypeupthree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_upload_filesupport2_prtypeupthree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/img"
                        android:src="@drawable/ic_take_picture"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_upload_filesupport2_prtypeupthree"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:ellipsize="none"
                        android:maxLines="2"
                        android:scrollHorizontally="false"
                        android:text="@string/txtnull"
                        android:textColor="@color/darkO05"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_upload_filesupport2_prtypeupthree"
                        app:layout_constraintEnd_toStartOf="@+id/img_cancel_upload_filesupport2_prtypeupthree"
                        app:layout_constraintStart_toEndOf="@+id/img_upload_filesupport2_prtypeupthree"
                        app:layout_constraintTop_toTopOf="@+id/img_upload_filesupport2_prtypeupthree" />

                    <ImageView
                        android:id="@+id/img_cancel_upload_filesupport2_prtypeupthree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/img"
                        android:foreground="@drawable/selectable_curve"
                        android:src="@drawable/ic_cancel_24px"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_img_filesupport2_prtypeupthree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                app:cardBackgroundColor="@color/dark"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_upload_filesupport2_prtypeupthree">

                <Button
                    android:id="@+id/btn_rotate_filesupport2_prtypeupthree"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_baseline_rotate_right_dark_24"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white" />

                <ImageView
                    android:id="@+id/img_rotate_filesupport2_prtypeupthree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="@string/img"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_baseline_no_photography_24" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txt_format_img2_prtypeupthree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/format_diperbolehkan"
                android:textColor="@color/darkO05"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/cv_img_filesupport2_prtypeupthree"
                app:layout_constraintStart_toStartOf="@+id/cv_img_filesupport2_prtypeupthree"
                app:layout_constraintTop_toBottomOf="@+id/cv_img_filesupport2_prtypeupthree" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_simpan_prtypeupthree"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_green"
        android:letterSpacing="0.01"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>