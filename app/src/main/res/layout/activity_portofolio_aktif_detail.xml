<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_port_aktif_det"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.tabportofoliofragment.PortofolioAktifDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_port_aktif_det"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_collapseMode="pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/ToolbarTheme"
        app:titleTextColor="@color/dark">

        <ImageView
            android:id="@+id/img_kontrak_port_aktif_det"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="@string/img"
            android:foreground="@drawable/selectable_curve"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_kontrak" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/img_mark_port_aktif_det"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_port_aktif_det"
        app:srcCompat="@drawable/ic_loan_rating_a" />

    <TextView
        android:id="@+id/txt_loan_rating_port_aktif_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/ibm_plex_sans_semi_bold"
        android:text="@string/mark_a1"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_mark_port_aktif_det"
        app:layout_constraintEnd_toEndOf="@+id/img_mark_port_aktif_det"
        app:layout_constraintStart_toStartOf="@+id/img_mark_port_aktif_det"
        app:layout_constraintTop_toTopOf="@+id/img_mark_port_aktif_det" />

    <TextView
        android:id="@+id/txt_loan_type_port_aktif_det"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:maxLines="1"
        android:text="@string/txtnull"
        android:textColor="@color/dark"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_mark_port_aktif_det"
        app:layout_constraintTop_toTopOf="@+id/img_mark_port_aktif_det" />

    <TextView
        android:id="@+id/txt_loan_code_port_aktif_det"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:maxLines="1"
        android:text="@string/txtnull"
        android:textColor="@color/darkO05"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_loan_type_port_aktif_det"
        app:layout_constraintStart_toEndOf="@+id/img_mark_port_aktif_det"
        app:layout_constraintTop_toBottomOf="@+id/txt_loan_type_port_aktif_det" />

    <TextView
        android:id="@+id/lbl_bunga_port_aktif_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/bunga_per_th"
        android:textColor="@color/darkO05"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/txt_loan_code_port_aktif_det"
        app:layout_constraintTop_toBottomOf="@+id/img_mark_port_aktif_det" />

    <TextView
        android:id="@+id/lbl_tenor_port_aktif_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/tenor"
        android:textColor="@color/darkO05"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_bunga_port_aktif_det"
        app:layout_constraintStart_toEndOf="@+id/lbl_bunga_port_aktif_det"
        app:layout_constraintTop_toTopOf="@+id/lbl_bunga_port_aktif_det" />

    <TextView
        android:id="@+id/lbl_sisa_tenor_port_aktif_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="@string/sisa_tenor"
        android:textColor="@color/darkO05"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_tenor_port_aktif_det"
        app:layout_constraintStart_toEndOf="@+id/lbl_tenor_port_aktif_det"
        app:layout_constraintTop_toTopOf="@+id/lbl_tenor_port_aktif_det" />

    <TextView
        android:id="@+id/txt_bunga_port_aktif_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nol_percent"
        android:textColor="@color/dark"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/lbl_bunga_port_aktif_det"
        app:layout_constraintTop_toBottomOf="@+id/lbl_bunga_port_aktif_det" />

    <TextView
        android:id="@+id/txt_tenor_port_aktif_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nol_hari"
        android:textColor="@color/dark"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/lbl_tenor_port_aktif_det"
        app:layout_constraintTop_toBottomOf="@+id/lbl_tenor_port_aktif_det" />

    <TextView
        android:id="@+id/txt_sisatenor_port_aktif_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nol_hari"
        android:textColor="@color/dark"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/lbl_sisa_tenor_port_aktif_det"
        app:layout_constraintTop_toBottomOf="@+id/lbl_sisa_tenor_port_aktif_det" />

    <HorizontalScrollView
        android:id="@+id/sv_sum_port_aktif_det"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        android:orientation="horizontal"
        android:scrollbarSize="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_bunga_port_aktif_det">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_pb_received_port_aktif_det"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_pb_received_port_aktif_det"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/white"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/lbl_tot_angs_selanjutnya_port_aktif_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/ibm_plex_sans_medium"
                        android:maxLines="1"
                        android:text="@string/angsuran_per_selanjutnya"
                        android:textAllCaps="true"
                        android:textColor="@color/darkO05"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_tot_angs_selanjutnya_port_aktif_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/ibm_plex_sans_semi_bold"
                        android:text="@string/dummy_rp_nol"
                        android:textColor="@color/dark"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_tot_angs_selanjutnya_port_aktif_det" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nom_received_port_aktif_det"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons_cv_nom_received_port_aktif_det"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/lbl_tot_angs_sudah_port_aktif_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/ibm_plex_sans_medium"
                        android:maxLines="1"
                        android:text="@string/angsuran_per_sudah"
                        android:textAllCaps="true"
                        android:textColor="@color/darkO05"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_tot_angs_sudah_port_aktif_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/ibm_plex_sans_semi_bold"
                        android:text="@string/dummy_rp_nol"
                        android:textColor="@color/dark"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_tot_angs_sudah_port_aktif_det" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/div_top_port_aktif_det"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv_sum_port_aktif_det" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:text="@string/jadwal_pembayaran"
        android:textAllCaps="true"
        android:textColor="@color/darkO05"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_top_port_aktif_det" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:text="@string/jumlah_tagihan"
        android:textAllCaps="true"
        android:textColor="@color/darkO05"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_top_port_aktif_det" />

    <View
        android:id="@+id/div_top2_port_aktif_det"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_port_aktif_det"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_top2_port_aktif_det" />

</androidx.constraintlayout.widget.ConstraintLayout>