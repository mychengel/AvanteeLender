<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_view_kontrak_pendanaan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.features.pendanaan.ViewKontrakPendanaanActivity">

    <WebView
        android:id="@+id/wv_view_kontrak_pendanaan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layerType="software"
        app:layout_constraintBottom_toTopOf="@+id/btn_setuju_view_kontrak_pendanaan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></WebView>

    <Button
        android:id="@+id/btn_setuju_view_kontrak_pendanaan"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_green"
        android:enabled="true"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="@string/setuju_lanjutkan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>