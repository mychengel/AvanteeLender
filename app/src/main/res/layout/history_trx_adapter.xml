<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_adp_histori_trx"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:context=".adapter.HistoryTrxAdapter">

    <ImageView
        android:id="@+id/img_adp_histori_trx"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_red"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_withdraw_white" />

    <TextView
        android:id="@+id/lbl_title_adp_histori_trx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/dark"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/lbl_nominal_adp_histori_trx"
        app:layout_constraintStart_toEndOf="@+id/img_adp_histori_trx"
        app:layout_constraintTop_toTopOf="@+id/img_adp_histori_trx" />

    <TextView
        android:id="@+id/lbl_datetime_adp_histori_trx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_adp_histori_trx"
        app:layout_constraintStart_toStartOf="@+id/lbl_title_adp_histori_trx" />

    <TextView
        android:id="@+id/lbl_nominal_adp_histori_trx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:text="TextView"
        android:textColor="@color/dark"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_title_adp_histori_trx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lbl_title_adp_histori_trx" />

    <TextView
        android:id="@+id/lbl_status_adp_histori_trx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:text="TextView"
        android:textAllCaps="true"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_nominal_adp_histori_trx" />
</androidx.constraintlayout.widget.ConstraintLayout>