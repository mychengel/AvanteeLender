<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_tb_fr_dashboard"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageView
        android:id="@+id/img_pp_tb_fr_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_iconuser" />

    <TextView
        android:id="@+id/txt_name_tb_fr_dashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="@font/ibm_plex_sans_semi_bold"
        android:maxLines="1"
        android:text="@string/txtnull"
        android:textColor="@color/dark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_pp_tb_fr_dashboard"
        app:layout_constraintTop_toTopOf="@+id/img_pp_tb_fr_dashboard" />

    <TextView
        android:id="@+id/txt_code_tb_fr_dashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/txtnull"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_name_tb_fr_dashboard"
        app:layout_constraintStart_toStartOf="@+id/txt_name_tb_fr_dashboard"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_tb_fr_dashboard" />
</androidx.constraintlayout.widget.ConstraintLayout>