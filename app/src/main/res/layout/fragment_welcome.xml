<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_fr_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.registration.WelcomeFragment">

    <ImageView
        android:id="@+id/iv_welcome_fragment_register"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/ibm_plex_sans_semi_bold"
        android:text="@string/welcome_message"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_welcome_fragment_register" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="0.5"
        android:fontFamily="@font/ibm_plex_sans"
        android:text="@string/new_user_form_desc"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <ImageView
        android:id="@+id/image_fill_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/fill_form"
        android:src="@drawable/ic_fill_form_circle"
        app:layout_constraintEnd_toStartOf="@+id/image_document_picture"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/image_document_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/document_picture"
        android:src="@drawable/ic_document_photo_circle"
        app:layout_constraintEnd_toStartOf="@+id/image_wait_verification"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_fill_form"
        app:layout_constraintTop_toTopOf="@+id/image_fill_form" />

    <ImageView
        android:id="@+id/image_wait_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/wait_verification"
        android:src="@drawable/ic_pending_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_document_picture"
        app:layout_constraintTop_toTopOf="@+id/image_document_picture" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ibm_plex_sans"
        android:text="@string/fill_form"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/image_fill_form"
        app:layout_constraintStart_toStartOf="@+id/image_fill_form"
        app:layout_constraintTop_toBottomOf="@+id/image_fill_form" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ibm_plex_sans"
        android:text="@string/document_picture"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/image_document_picture"
        app:layout_constraintStart_toStartOf="@+id/image_document_picture"
        app:layout_constraintTop_toBottomOf="@+id/image_document_picture" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ibm_plex_sans"
        android:text="@string/wait_verification"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/image_wait_verification"
        app:layout_constraintStart_toStartOf="@+id/image_wait_verification"
        app:layout_constraintTop_toBottomOf="@+id/image_wait_verification" />

    <Button
        android:id="@+id/btn_welcome_form_begin"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_green"
        android:text="@string/start_filling_forms"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>