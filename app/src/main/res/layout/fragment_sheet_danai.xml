<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_fr_sheet_danai"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    tools:context=".view.sheet.DetailPeminjamSheetFragment">

    <ImageView
        android:id="@+id/img_handle_fr_sheet_danai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/img"
        android:src="@drawable/ic_handle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_danai_fr_sheet_danai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ibm_plex_sans_semi_bold"
        android:text="@string/danai"
        android:textColor="@color/dark"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_handle_fr_sheet_danai" />

    <TextView
        android:id="@+id/lbl_isi_nom_fr_sheet_danai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:text="@string/isi_nom_pendanaan"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/lbl_danai_fr_sheet_danai"
        app:layout_constraintTop_toBottomOf="@+id/lbl_danai_fr_sheet_danai" />

    <EditText
        android:id="@+id/edit_nom_pendanaan_fr_sheet_danai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:fontFamily="@font/ibm_plex_sans_semi_bold"
        android:inputType="number"
        android:paddingStart="80dp"
        android:paddingEnd="32dp"
        android:textColor="@color/dark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_isi_nom_fr_sheet_danai" />

    <ImageView
        android:id="@+id/img_plus_fr_sheet_danai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/img"
        app:layout_constraintBottom_toBottomOf="@+id/edit_nom_pendanaan_fr_sheet_danai"
        app:layout_constraintEnd_toEndOf="@+id/edit_nom_pendanaan_fr_sheet_danai"
        app:srcCompat="@drawable/ic_plus_outline" />

    <ImageView
        android:id="@+id/img_minus_fr_sheet_danai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/img"
        app:layout_constraintBottom_toBottomOf="@+id/edit_nom_pendanaan_fr_sheet_danai"
        app:layout_constraintStart_toStartOf="@+id/edit_nom_pendanaan_fr_sheet_danai"
        app:srcCompat="@drawable/ic_minus_outline" />

    <TextView
        android:id="@+id/lbl_rp_fr_sheet_danai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ibm_plex_sans_semi_bold"
        android:text="@string/txt_rp"
        android:textColor="@color/dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_nom_pendanaan_fr_sheet_danai"
        app:layout_constraintStart_toEndOf="@+id/img_minus_fr_sheet_danai" />

    <TextView
        android:id="@+id/lbl_kelipatan_satu_juta_fr_sheet_danai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/kelipatan_satu_juta"
        android:textColor="@color/darkO05"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_nom_pendanaan_fr_sheet_danai" />

    <TextView
        android:id="@+id/lbl_pil_metode_fr_sheet_danai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:text="@string/pilih_metode_pendanaan"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/lbl_kelipatan_satu_juta_fr_sheet_danai"
        app:layout_constraintTop_toBottomOf="@+id/lbl_kelipatan_satu_juta_fr_sheet_danai" />

    <RadioGroup
        android:id="@+id/rg_metode_fr_sheet_danai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_pil_metode_fr_sheet_danai">

        <LinearLayout
            android:id="@+id/lin_pil_metode_fr_sheet_danai"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_metode_saldo_fr_sheet_danai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img_saldo_fr_sheet_danai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:contentDescription="@string/img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_saldo_danai" />

                    <TextView
                        android:id="@+id/lbl_saldo_fr_sheet_danai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/ibm_plex_sans_medium"
                        android:text="@string/saldo_tersedia"
                        android:textColor="@color/dark"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/img_saldo_fr_sheet_danai" />

                    <TextView
                        android:id="@+id/txt_saldo_fr_sheet_danai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:maxLines="2"
                        android:text="@string/dummy_rp_nol"
                        android:textColor="@color/darkO05"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/lbl_saldo_fr_sheet_danai"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_saldo_fr_sheet_danai" />

                    <RadioButton
                        android:id="@+id/rad_metode_saldo_fr_sheet_danai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:buttonTint="@color/colorPrimary"
                        android:checked="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_metode_tf_bank_fr_sheet_danai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/img_tf_bank_fr_sheet_danai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:contentDescription="@string/img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_bank_transfer" />

                    <TextView
                        android:id="@+id/lbl_tf_bank_fr_sheet_danai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/ibm_plex_sans_medium"
                        android:text="@string/tf_bank"
                        android:textColor="@color/dark"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/img_tf_bank_fr_sheet_danai" />

                    <TextView
                        android:id="@+id/lbl_with_unique_va_code_fr_sheet_danai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:maxLines="2"
                        android:text="@string/with_uniqe_code_va"
                        android:textColor="@color/darkO05"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/lbl_tf_bank_fr_sheet_danai"
                        app:layout_constraintTop_toBottomOf="@+id/lbl_tf_bank_fr_sheet_danai" />

                    <RadioButton
                        android:id="@+id/rad_metode_tf_bank_fr_sheet_danai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:buttonTint="@color/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RadioGroup>

    <Button
        android:id="@+id/btn_selanjutnya_fr_sheet_danai"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_green"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_metode_fr_sheet_danai" />

    <TextView
        android:id="@+id/txt_est_bunga_fr_sheet_danai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ibm_plex_sans_semi_bold"
        android:maxLines="1"
        android:text="@string/dummy_rp_nol"
        android:textColor="@color/dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_selanjutnya_fr_sheet_danai"
        app:layout_constraintEnd_toStartOf="@+id/btn_selanjutnya_fr_sheet_danai"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lbl_est_bunga_fr_sheet_danai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="@string/est_bunga_akan_diterima"
        android:textColor="@color/dark"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_est_bunga_fr_sheet_danai"
        app:layout_constraintEnd_toEndOf="@+id/txt_est_bunga_fr_sheet_danai"
        app:layout_constraintStart_toStartOf="@+id/txt_est_bunga_fr_sheet_danai" />

</androidx.constraintlayout.widget.ConstraintLayout>