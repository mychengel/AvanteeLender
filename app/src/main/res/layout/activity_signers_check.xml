<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_signers_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.auth.SignersCheckActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_signers_check"
        android:layout_width="144dp"
        android:layout_height="32dp"
        android:foregroundGravity="top"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_signers_check"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading"
        tools:layout_conversion_absoluteHeight="132dp"
        tools:layout_conversion_absoluteWidth="132dp" />

    <ImageView
        android:id="@+id/img_signers_check"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>