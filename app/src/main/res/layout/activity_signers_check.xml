<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_signers_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.auth.SignersCheckActivity">

    <WebView
        android:id="@+id/wv_signers_check"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layerType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></WebView>

    <ImageView
        android:id="@+id/img_close_signers_check"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/img"
        android:foreground="@drawable/selectable_curve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cancel_24px" />

</androidx.constraintlayout.widget.ConstraintLayout>