<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_adp_blog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".adapter.BlogAdapter">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_adp_blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:foreground="@drawable/selectable_square"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_cv_adp_blog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_img_adp_blog"
                android:layout_width="96dp"
                android:layout_height="86dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_adp_blog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/img"
                    android:scaleType="centerInside"
                    tools:srcCompat="@drawable/ic_baseline_no_photography_24" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_date_adp_blog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:lines="1"
                android:text="@string/txtnull"
                android:textColor="@color/darkO05"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cv_img_adp_blog"
                app:layout_constraintTop_toTopOf="@+id/cv_img_adp_blog" />

            <TextView
                android:id="@+id/txt_title_adp_blog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:lineSpacingExtra="0sp"
                android:maxLines="3"
                android:text="@string/txtnull"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cv_img_adp_blog"
                app:layout_constraintTop_toBottomOf="@+id/txt_date_adp_blog" />

            <TextView
                android:id="@+id/txt_by_adp_blog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:text="@string/txtnull"
                android:textColor="@color/darkO05"
                android:textSize="11sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/cv_img_adp_blog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cv_img_adp_blog" />

            <ImageView
                android:id="@+id/img_pencil_adp_blog"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/img"
                android:src="@drawable/ic_pencil_dark05"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/cv_img_adp_blog"
                app:layout_constraintStart_toEndOf="@+id/cv_img_adp_blog" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>